	Escribir 'Pasar la longitud en metro (m)'
	
	
	Definir m,foot,yardas,millas Como Real
	Escribir ' Ingrese la Longitud en m '
	Leer m
	foot <- m*3.28
	yarda <- m*1.094
	milla <- m/1609
	Escribir 'esto en pies es: ',foot
	Escribir 'Esto en yardas es: ',yarda
	Escribir 'Esto en millas es: ',milla
FinAlgoritmo
